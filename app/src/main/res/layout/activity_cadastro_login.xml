<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.CadastroLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient_360x270"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:gravity="center"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/textView34"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Por favor,  preencha todos os dados abaixo"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:id="@+id/textView44"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="* Todos os campos são obrgatórios *"
                                    android:textAlignment="center"
                                    android:textColor="#FD0202"
                                    android:textSize="18sp" />
                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/EditNameUser"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/baseline_text"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:hint="  Digite seu  Nome"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp"
                                    android:textColor="#000000" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/EditLoginUser"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:drawableLeft="@drawable/user32"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:hint="  Digite um Login"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp"
                                    android:textColor="#000000" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

                                        <EditText
                                            android:id="@+id/EditPassUser"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="30dp"
                                            android:drawableLeft="@drawable/key32"
                                            android:ems="10"
                                            android:gravity="center"
                                            android:hint="  Digite uma senha"
                                            android:inputType="textPassword"
                                            android:textColor="#000000" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:id="@+id/linpassstrong"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1">

                                                <TextView
                                                    android:id="@+id/textView7"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="5dp"
                                                    android:layout_weight="1"
                                                    android:text="Força da Senha :  "
                                                    android:textAlignment="textEnd"
                                                    android:textColor="#000000"
                                                    android:textSize="18sp" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1">

                                                <TextView
                                                    android:id="@+id/LabelPassStrong"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="TextView"
                                                    android:textAlignment="textStart"
                                                    android:textColor="#000000"
                                                    android:textSize="18sp" />
                                            </RelativeLayout>

                                        </LinearLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/LinProgress"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginRight="2dp">

                                        <ProgressBar
                                            android:id="@+id/progressBarPass"
                                            style="?android:attr/progressBarStyleHorizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/EditPass2User"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/key32"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:hint="  Repita a senha"
                                    android:inputType="textPassword"
                                    android:paddingLeft="5dp"
                                    android:textColor="#000000" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/EditEmailUser"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/email"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:hint="Digite o seu email"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp"
                                    android:textColor="#000000" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="15dp"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.4"
                                                android:gravity="center">

                                                <TextView
                                                    android:id="@+id/textView50"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Selecionar Foto de Perfil"
                                                    android:textAlignment="center"
                                                    android:textSize="18sp" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/roundedshapeblue"
                                                android:gravity="center">

                                                <Button
                                                    android:id="@+id/BtnSelectFoto"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/bg_icon_transparent"
                                                    android:gravity="center" />

                                                <ImageView
                                                    android:id="@+id/imageView21"
                                                    android:layout_width="75dp"
                                                    android:layout_height="75dp"
                                                    android:layout_centerInParent="true"
                                                    app:srcCompat="@drawable/photo_36x36_white" />
                                            </RelativeLayout>

                                        </LinearLayout>

                                        <RelativeLayout
                                            android:id="@+id/rlFoto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            tools:visibility="gone">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <RelativeLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="2dp">

                                                    <ImageView
                                                        android:id="@+id/imgSelec"
                                                        android:layout_width="150dp"
                                                        android:layout_height="150dp"
                                                        android:layout_weight="1"
                                                        app:srcCompat="@drawable/logotipo" />
                                                </RelativeLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:gravity="center"
                                                    android:orientation="vertical">

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="center">

                                                        <TextView
                                                            android:id="@+id/NomeFotoSele"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="1"
                                                            android:text="TextView"
                                                            android:textAlignment="center"
                                                            android:textSize="18sp" />

                                                    </RelativeLayout>

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="center">

                                                        <TextView
                                                            android:id="@+id/TamFotoSele"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="1"
                                                            android:text="TextView"
                                                            android:textAlignment="center"
                                                            android:textSize="18sp" />
                                                    </RelativeLayout>
                                                </LinearLayout>

                                            </LinearLayout>
                                        </RelativeLayout>

                                    </LinearLayout>
                                </ScrollView>
                            </RelativeLayout>

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/Btn_Login_Cad_Voltar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_rounded_bluefacial"
                            android:drawableRight="@drawable/backwhite"
                            android:text="Voltar"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/roundedshapeblue"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/Btn_Login_Cad_User"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_icon_transparent"
                            android:text="Salvar"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView23"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/disquetsavewhite" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>